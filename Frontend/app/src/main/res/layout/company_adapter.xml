<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cardview"
    android:layout_margin="5dp"
    android:elevation="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableRow
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/logoCompany"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/logonosa"
                    android:textSize="8pt" />

                <TextView
                    android:id="@+id/tv_namecompany"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Tên công ty hiển thị ở đây"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="8pt" />
            </TableRow>

            <TableRow
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/posion"
                    android:backgroundTint="#C6000000"/>

                <TextView
                    android:id="@+id/tv_addresscompany"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Địa chỉ hiển thị ở đây"
                    android:textColor="#C6000000"
                    android:textSize="5pt" />
            </TableRow>
            <TableRow
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/ic_baseline_email_24"
                    android:backgroundTint="#C6000000"/>

                <TextView
                    android:id="@+id/tv_emailcom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Email"
                    android:textColor="#C6000000"
                    android:textSize="5pt" />
            </TableRow>
            <TableRow
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/common_full_open_on_phone"
                    android:backgroundTint="#C6000000"/>

                <TextView
                    android:id="@+id/tv_phonecom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Số điện thoại"
                    android:textColor="#C6000000"
                    android:textSize="5pt" />
            </TableRow>
            <TableRow
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/pin"
                    android:backgroundTint="#C6000000"/>

                <TextView
                    android:id="@+id/tv_url"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Url.."
                    android:textColor="#C6000000"
                    android:textSize="5pt" />
            </TableRow>
            <TextView
                android:id="@+id/tv_amountJobcreated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="#FF0000"
                android:layout_below="@id/view1"
                android:gravity="center"
                android:text="Số lượng Job đã tạo"
                android:textStyle="bold|italic" />
        </LinearLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>