<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Applicant.Fragment.Applicant_Fragment_main">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            android:background="@drawable/button_selector"
            android:id="@+id/toolbar"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">
            <AutoCompleteTextView
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:hint="Nhập từ cần tìm"
                android:completionThreshold="1"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:id="@+id/edt_search_word"/>

            <ImageButton
                android:layout_marginLeft="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/search"
                android:id="@+id/imgbt_search"/>

        </LinearLayout>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/job_adapter"
            android:id="@+id/lv_jobtoApplicant"/>
    </LinearLayout>

</FrameLayout>