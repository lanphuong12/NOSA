<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Applicant.Fragment.JobDetail_Fragment_CompanyIn4">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:orientation="vertical">
            <TableRow
                android:gravity="center"
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/posion"
                    android:backgroundTint="#C6000000"/>

                <TextView
                    android:id="@+id/tv_addresscompany"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Địa chỉ hiển thị ở đây"
                    android:textColor="#000000"
                    android:textSize="20dp" />
            </TableRow>
            <TableRow
                android:gravity="center"
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/ic_baseline_email_24"
                    android:backgroundTint="#C6000000"/>

                <TextView
                    android:id="@+id/tv_emailcompany"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Email hiển thị ở đây"
                    android:textColor="#000000"
                    android:textSize="20dp" />
            </TableRow>
            <TableRow
                android:gravity="center"
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/common_full_open_on_phone"
                    android:backgroundTint="#C6000000"/>

                <TextView
                    android:id="@+id/tv_phonecompany"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Phone hiển thị ở đây"
                    android:textColor="#000000"
                    android:textSize="20dp" />
            </TableRow>

            <TableRow
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Website: "
                    android:textColor="#0020D5"
                    android:textStyle="bold"
                    android:textSize="12pt" />

                <TextView
                    android:id="@+id/tv_urlwebsite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Phone hiển thị ở đây"
                    android:textColor="#000000"
                    android:textStyle="italic"
                    android:textSize="20dp" />
            </TableRow>
            <LinearLayout
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Company Description"
                    android:textStyle="bold"
                    android:textColor="#0020D5"
                    android:textSize="12pt" />

                <TextView
                    android:id="@+id/tv_companydescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Phone hiển thị ở đây"
                    android:textColor="#000000"
                    android:textStyle="italic"
                    android:textSize="20dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>