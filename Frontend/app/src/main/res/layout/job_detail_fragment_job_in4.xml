<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Applicant.Fragment.JobDetailFragment_JobIn4">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical">
        <TableRow
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_namejob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên công việc hiển thị ở đây!"
                android:textStyle="bold"
                android:textColor="#0020D5"
                android:textSize="30dp" />
        </TableRow>
        <TableRow
            android:gravity="center"
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/posion"
                android:backgroundTint="#C6000000"/>

            <TextView
                android:id="@+id/tv_addresscompany"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Địa chỉ hiển thị ở đây"
                android:textColor="#000000"
                android:textSize="20dp" />
        </TableRow>
        <TableRow
            android:gravity="center"
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/salary"
                android:backgroundTint="#C6000000"/>

            <TextView
                android:id="@+id/tv_salary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Lương hiển thị ở đây"
                android:textColor="#000000"
                android:textSize="20dp" />
        </TableRow>
        <TableRow
            android:gravity="center"
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/list_skill"
                android:backgroundTint="#C6000000"/>

            <TextView
                android:id="@+id/tv_skills"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Yêu cầu hiển thị ở đây"
                android:textColor="#000000"
                android:textSize="20dp" />
        </TableRow>

        <TableRow
            android:gravity="center"
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/list_job"
                android:backgroundTint="#C6000000"/>

            <TextView
                android:id="@+id/tv_soluongtuyendung"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Số lượng hiển thị ở đây"
                android:textColor="#000000"
                android:textSize="20dp" />
        </TableRow>

        <TableRow
            android:gravity="center"
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/style"
                android:backgroundTint="#C6000000"/>

            <TextView
                android:id="@+id/tv_loaihinhcongviec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Loại hình công việc hiển thị ở đây"
                android:textColor="#000000"
                android:textSize="20dp" />
        </TableRow>

        <TableRow
            android:gravity="center"
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/style"
                android:backgroundTint="#C6000000"/>

            <TextView
                android:id="@+id/tv_loaicongviec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Loại công việc hiển thị ở đây"
                android:textColor="#000000"
                android:textSize="20dp" />
        </TableRow>
        <LinearLayout
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Job description"
                android:textStyle="bold"
                android:textColor="#0020D5"
                android:textSize="12pt" />

            <TextView
                android:id="@+id/tv_jobdescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Job Descripton hiển thị ở đây"
                android:textColor="#000000"
                android:textStyle="italic"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>